<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kweekmedheaderlatest" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noprofilepicture" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#950110"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Viral Android"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/verifyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Verified or not"
                android:textColor="@color/green"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/saveLocationImageView"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                app:srcCompat="@android:drawable/ic_menu_mylocation" />

            <TextView
                android:id="@+id/updateProfileLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/saveLocationImageView"
                android:layout_alignTop="@+id/textView"
                android:layout_marginStart="-13dp"
                android:layout_marginTop="1dp"
                android:text="Update Location"
                android:textColor="@color/cast_expanded_controller_text_color"
                android:textSize="10sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profileNameEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f2f6fc"
                android:elevation="4dp"
                android:hint="Name"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />

            <EditText
                android:id="@+id/profileSurnameEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f9f2f2"
                android:elevation="4dp"
                android:hint="Surname"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />

            <EditText
                android:id="@+id/profileUsernameEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f2f6fc"
                android:elevation="4dp"
                android:hint="Username"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />

            <EditText
                android:id="@+id/profileEmailEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f9f2f2"
                android:elevation="4dp"
                android:hint="Email"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />

            <EditText
                android:id="@+id/profilePhoneNumberEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f2f6fc"
                android:elevation="4dp"
                android:hint="Phone Number"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />


            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f9f2f2"
                android:elevation="4dp"
                android:hint="Age"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />

            <EditText
                android:id="@+id/profilePasswordEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f2f6fc"
                android:elevation="4dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />

            <EditText
                android:id="@+id/profileConfirmPasswordEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#f9f2f2"
                android:elevation="4dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/fontcolor" />

            <Button
                android:id="@+id/updateProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="Save" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/profilePictureProgressBar"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-8dp"
            android:visibility="visible" />
    </RelativeLayout>
</ScrollView>